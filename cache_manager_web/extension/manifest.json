{
    "manifest_version": 3,
    "name": "Cache Manager Capture",
    "version": "1.0.0",
    "description": "Capture web page content for Mind2Web Cache Manager",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icons/icon128.png"
        }
    },
    "commands": {
        "capture-page": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Capture current page to cache"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}
